<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              style="@style/detectionResults"
              android:padding="@dimen/detection_padding"
    >
    <ImageView
        android:id="@+id/user_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:layout_weight="3"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/detection_image_margin"
        android:src="@drawable/loading_drawable"
        />
    
    <ImageView
        android:id="@+id/result_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:layout_weight="3"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/detection_image_margin"
        android:src="@drawable/loading_drawable"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_thickness"
        android:background="@color/medium_dark_grey"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/detection_image_margin"
        android:layout_marginRight="@dimen/detection_image_margin"
        android:layout_marginTop="@dimen/detection_image_margin"
        />
    <LinearLayout
        android:id="@+id/button_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/detectionResults"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <Button
            android:id="@+id/correct"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/detectionResults"
            android:background="@drawable/response_button"
            android:text="@string/mark_correct"
            />
        <View
            android:layout_height="@dimen/divider_line_height"
            android:layout_width="@dimen/divider_line_thickness"
            android:background="@color/medium_dark_grey"
            android:layout_gravity="center_vertical"
            />
        <Button
            android:id="@+id/incorrect"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/detectionResults"
            android:background="@drawable/response_button"
            android:text="@string/mark_incorrrect"
            />
    </LinearLayout>

</LinearLayout>